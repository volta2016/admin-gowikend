extend componentes/template.pug
block contenido
    include ./componentes/header-title.pug
    .area.wrapper.j-sb
        article.box-6.br.background-color-white.px-3.py-4
            h2.mt-3 Nombre de la habitación
            input.place-output.pl-2.mb-3(type="search" name="busquedad" value="Disfruta de una experiencia única" disabled)
            .containplace.area
                .containplace__boxa.box-6
                    h2 N° de camas simples
                    select.containplace--selectvalue
                            option(value="value1") Seleccione región
                            option(value="value2") Value 2
                            option(value="value3") Value 3
                .containplace__boxb.box-6
                        h2 N° de camas dobles         
                        select.containplace--selectvalue
                            option(value="value1") Seleccione comuna
                            option(value="value2") Value 2
                            option(value="value3") Value 3
            h2.mt-3.mb-2 Equipamiento incluído
            include ./componentes/service-button.pug
            h2.mt-3  Detalles y precio
            .contain-detailmt2.area.mb-2
                .contain-detailmt2__element.box-5.pt-2 
                    span.font-size-xs Mt2 de la habitación
                .contain-detailmt2__element.box-7.area
                    input.mt2h.pl-2(type="search" name="urlamigable" )
                    .unidad.background-color-light.font-size-xs mt2
            
            .contain-detailsprice.area.mb-2
                    .contain-detailsprice__element.box-5.pt-2 
                        span.font-size-xs Precio por día
                    .contain-detailsprice__element.box-7.area
                        .price.background-color-light.font-size-xs $
                        input.price-cpl.pl-2(type="search" name="urlamigable" )
                        .unidad.background-color-light.font-size-xs mt2
            
            h2 Días disponibles
            article.days-available.area
                .days-available__date.box-6
                    img(src="images/calendar.png")
                .days-available__dateoption.box-6
                    h2 N° días disponibles
                    span.mb-2 8 de un max 30
                    h2 Días reservados
                    span No se han encontrado reservas
                    .searchreset.area.mb-4
                        i 
                            img(src="images/sync.svg")
                        b.searchreset__dateoption Buscar de nuevo
                    .searchreset.area
                        i 
                            img(src="images/trash-red.svg")
                        b.searchreset__reset Resetear fechas

            articcle.next.area.j-sb
                div
                   
                div
                    butoon.btn.font-size-s.background-color-gored.px-2 Crear habitación

        include ./componentes/card-list-optionedit.pug